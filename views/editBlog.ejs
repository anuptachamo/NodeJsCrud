<%- include("navbar.ejs") %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div class="add-blog-form">
        <h2>Edit Blog</h2>
        <form action="/editBlog/<%-id %>" method="post" >
          <label for="title">Title:</label>
          <input type="text" value="<%-allBlogs[0].title %>"  id="title" name="title" required>
    
          <label for="subtitle">Subtitle:</label>
          <input type="text"  value="<%-allBlogs[0].subtitle %>"  id="subtitle" name="subtitle" required>
    
          <label for="description">Description:</label>
          <textarea id="description"  name="description" rows="4" required><%-allBlogs[0].description %> </textarea>
    
          <button type="submit">Submit</button>
        </form>
      </div>
</body>
</html>
